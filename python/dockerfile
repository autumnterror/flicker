# Dockerfile

FROM nvidia/cuda:12.1.1-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive

# Устанавливаем Python, pip и ffmpeg (нужен для обработки аудио)
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Скопируем список зависимостей
COPY requirements.txt .

# Обновим pip и поставим PyTorch с поддержкой CUDA
RUN python3 -m pip install --upgrade pip && \
    python3 -m pip install \
      torch==2.3.0+cu121 \
      torchvision==0.18.0+cu121 \
      torchaudio==2.3.0+cu121 \
      --index-url https://download.pytorch.org/whl/cu121 && \
    python3 -m pip install -r requirements.txt

# Копируем основной код сервиса
COPY main.py .

# Порт для uvicorn
EXPOSE 8008

# Переменные окружения по умолчанию (можно переопределить при запуске контейнера)
ENV WHISPER_MODEL=small
ENV WHISPER_DEVICE=cuda
ENV WHISPER_COMPUTE_TYPE=float16

# Запускаем FastAPI-приложение через uvicorn
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8008"]
