# Dockerfile

FROM python:3.11-slim

ENV DEBIAN_FRONTEND=noninteractive

# ffmpeg нужен pydub для работы с аудио/видео
RUN apt-get update && apt-get install -y ffmpeg && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .

RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

COPY main.py .

# Порт HTTP-сервиса
EXPOSE 8008

# Переменные окружения по умолчанию (переопредели в docker run / compose)
ENV DEEPGRAM_MODEL=nova-2-general
ENV DEEPGRAM_LANGUAGE=ru
ENV SEGMENT_MINUTES=10
ENV SMART_FORMAT=true

# DEEPGRAM_API_KEY обязательно нужно пробросить снаружи!
# пример: docker run -e DEEPGRAM_API_KEY=... ...

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8008"]
