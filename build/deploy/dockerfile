FROM golang:alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/flicker ./cmd/flicker/main.go

FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/flicker /app/flicker

RUN mkdir -p /app/configs
VOLUME /app/configs

EXPOSE 8080

ENTRYPOINT ["sh", "-c", "if [ -f \"/app/configs/${CONFIG_FILE}\" ]; then ./flicker --config /app/configs/${CONFIG_FILE}; else echo \"Error: Config file not found. Please mount your config file to configs/ and set CONFIG_FILE env variable\"; exit 1; fi"]